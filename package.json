{
  "name": "template-ui",
  "main": "index.js",
  "type": "module",
  "pear": {
    "pre": "pear-electron/pre",
    "name": "template-ui",
    "gui": {
      "width": 1440,
      "height": 1024,
      "minWidth": 600
    },
    "routes": ".",
    "stage": {
    "unrouted": [
      "/services/oniri-core/src/app.js"
    ],
    "entrypoints": [
      "services/oniri-core/src/app.js"
    ],
    "ignore": [
        ".github",
        "appling",
        ".git",
        ".gitignore",
        "services"
      ]
  } 
  },
  "license": "Apache-2.0",
  "scripts": {
    "dev": "pear run -d .",
    "test": "brittle test/*.test.js",
    "clean": "rm -rf node_modules & rm -rf package-lock.json",
    "refresh": "rm -rf node_modules && rm -rf package-lock.json && npm install",
    "build": "cd ./appling && npx bare-make generate && npx bare-make build",
    "build:clean": "rm -rf ./appling/build"
  },
  "devDependencies": {
    "brittle": "^3.0.0",
    "pear-interface": "^1.0.0"
  },
  "dependencies": {
    "dayjs": "^1.11.19",
    "oniri-core": "file:services/oniri-core",
    "pear-bridge": "^1.2.0",
    "pear-electron": "^1.7.10"
  }
}
